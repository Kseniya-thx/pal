using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace core
{
    public class PolindromChecker
    {
        public static bool Check(string word1, string word2)
        {
            for (int i = 0; i < word2.Length / 2; i++)
           {
                if (word2[i] != word2[word2.Length - i - 1])

                    return false;
                return true;
            }
        }
    }
}
